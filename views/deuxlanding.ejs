<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Accueil | Gestion des Patients</title>
  <link rel="stylesheet" href="style.css" />
  <script defer src="script.js"></script>
  <style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', sans-serif;
  background: #f5f7fb;
  color: #333;
}

.navbar {
  background: #111827;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar .logo {
  font-size: 1.8rem;
  font-weight: bold;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 2rem;
}

.nav-links li a {
  color: white;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s;
}

.nav-links li a:hover {
  color: #60a5fa;
}

.hero {
  position: relative;
  height: 90vh;
  overflow: hidden;
}

.carousel {
  height: 100%;
  position: relative;
}

.carousel-slide {
  display: none;
  height: 100%;
  position: absolute;
  width: 100%;
  animation: fade 1s ease-in-out;
}

.carousel-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(60%);
}

.carousel-slide.active {
  display: block;
}

.overlay {
  position: absolute;
  top: 50%;
  left: 10%;
  transform: translateY(-50%);
  color: white;
}

.overlay h1 {
  font-size: 3rem;
  margin-bottom: 0.5rem;
}

.overlay p {
  font-size: 1.2rem;
}

.carousel-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.4);
  border: none;
  font-size: 2rem;
  color: white;
  padding: 0.5rem 1rem;
  cursor: pointer;
  z-index: 10;
}

.carousel-btn:hover {
  background: rgba(0, 0, 0, 0.7);
}

.carousel-btn.prev {
  left: 0;
}

.carousel-btn.next {
  right: 0;
}

@keyframes fade {
  from {opacity: 0.4;}
  to {opacity: 1;}
}

@media (max-width: 768px) {
  .overlay h1 {
    font-size: 2rem;
  }

  .overlay p {
    font-size: 1rem;
  }

  .nav-links {
    flex-direction: column;
    gap: 1rem;
    background: #1f2937;
    padding: 1rem;
    position: absolute;
    top: 70px;
    right: 0;
    display: none;
  }
}

  </style>
</head>
<body>
  <header>
    <nav class="navbar">
      <div class="logo">PaDB</div>
      <ul class="nav-links">
        <li><a href="#">Accueil</a></li>
        <li><a href="#">Découvrir</a></li>
        <li><a href="#">Statistiques</a></li>
        <li><a href="#">Connexion</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero / Carousel -->
  <section class="hero">
    <div class="carousel">
      <div class="carousel-slide active">
        <img src="/img/OIP.jpg" alt="slide1" />
        <div class="overlay">
          <h1>Gérez vos patients avec efficacité</h1>
          <p>Plateforme moderne, rapide et sécurisée</p>
        </div>
      </div>
      <div class="carousel-slide">
        <img src="/img/OIP.jpg" alt="slide2" />
        <div class="overlay">
          <h1>Suivi médical simplifié</h1>
          <p>Accès facile à l’historique des patients</p>
        </div>
      </div>
      <div class="carousel-slide">
        <img src="img3.jpg" alt="slide3" />
        <div class="overlay">
          <h1>Outils analytiques puissants</h1>
          <p>Tableaux de bord & graphiques en temps réel</p>
        </div>
      </div>
      <button class="carousel-btn prev">&#10094;</button>
      <button class="carousel-btn next">&#10095;</button>
    </div>
  </section>

 <script>
    let currentSlide = 0;
const slides = document.querySelectorAll('.carousel-slide');

function showSlide(index) {
  slides.forEach((slide, i) => {
    slide.classList.remove('active');
    if (i === index) {
      slide.classList.add('active');
    }
  });
}

function nextSlide() {
  currentSlide = (currentSlide + 1) % slides.length;
  showSlide(currentSlide);
}

function prevSlide() {
  currentSlide = (currentSlide - 1 + slides.length) % slides.length;
  showSlide(currentSlide);
}

document.querySelector('.next').addEventListener('click', nextSlide);
document.querySelector('.prev').addEventListener('click', prevSlide);

// Auto-slide toutes les 5 secondes
setInterval(nextSlide, 5000);

// Initialisation
showSlide(currentSlide);

 </script>
  </body>