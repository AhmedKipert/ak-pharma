        button {
            padding: 12px 20px;
            background-color: #007bff;
            border: none;
            color: white;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
            width: 100%;
        }

        button:hover {
            background-color: #0056b3;
        }

        .error {
            color: red;
            font-size: 0.9em;
            margin-bottom: 10px;
        }

        .dashboard-link {
            margin-top: 20px;
            display: none;
        }

        .dashboard-link a {
            text-decoration: none;
            color: #28a745;
            font-weight: bold;
        }

        .dashboard-link a:hover {
            text-decoration: underline;
        }

        input:focus,
        select:focus {
            outline: none;
            border-color: #007bff;
        }
    </style>
</head>

