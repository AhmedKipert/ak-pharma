<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AK-Pharma - Démonstration</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #1976d2;
      --primary-dark: #0d47a1;
      --primary-light: #e0ecff;
      --secondary-color: #ffcc00;
      --bg-color: #f9f9f9;
      --text-dark: #333;
      --text-light: #666;
      --text-white: #fff;
      --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
      --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
      --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
      --transition: all 0.3s ease;
      --border-radius: 12px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-dark);
      line-height: 1.6;
    }

    /* Navigation */
    .demo-navbar {
      background-color: var(--primary-color);
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: var(--shadow-md);
    }

    .demo-navbar-logo {
      color: var(--text-white);
      font-size: 1.5rem;
      font-weight: bold;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .demo-navbar-logo i {
      font-size: 1.8rem;
    }

    .demo-navbar-actions {
      display: flex;
      gap: 15px;
    }

    .demo-btn {
      padding: 0.6rem 1.2rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      transition: var(--transition);
    }

    .demo-btn-outline {
      border: 2px solid var(--text-white);
      color: var(--text-white);
      background: transparent;
    }

    .demo-btn-outline:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .demo-btn-primary {
      background: var(--text-white);
      color: var(--primary-color);
    }

    .demo-btn-primary:hover {
      background: #f0f0f0;
    }

    /* Hero Section */
    .demo-hero {
      background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
      color: var(--text-white);
      padding: 4rem 2rem;
      text-align: center;
    }

    .demo-hero-content {
      max-width: 800px;
      margin: 0 auto;
    }

    .demo-hero h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
    }

    .demo-hero p {
      font-size: 1.1rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }

    /* Video Demo Section */
    .demo-video-section {
      max-width: 1200px;
      margin: 3rem auto;
      padding: 0 2rem;
    }

    .demo-video-container {
      position: relative;
      padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
      height: 0;
      overflow: hidden;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-lg);
      background: #000;
      margin-bottom: 2rem;
    }

    .demo-video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }

    .demo-video-controls {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 3rem;
    }

    .demo-video-control-btn {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 0.8rem 1.5rem;
      background: var(--primary-color);
      color: white;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      transition: var(--transition);
      font-weight: 600;
    }

    .demo-video-control-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-2px);
    }

    .demo-video-control-btn i {
      font-size: 1rem;
    }

    /* Features Highlights */
    .demo-features {
      max-width: 1200px;
      margin: 4rem auto;
      padding: 0 2rem;
    }

    .demo-features h2 {
      text-align: center;
      margin-bottom: 3rem;
      font-size: 2rem;
      color: var(--primary-dark);
    }

    .demo-features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .demo-feature-card {
      background: white;
      padding: 1.5rem;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-sm);
      transition: var(--transition);
    }

    .demo-feature-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-md);
    }

    .demo-feature-card h3 {
      color: var(--primary-color);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .demo-feature-card h3 i {
      font-size: 1.2rem;
    }

    /* CTA Section */
    .demo-cta {
      background: var(--primary-light);
      padding: 4rem 2rem;
      text-align: center;
      margin-top: 3rem;
    }

    .demo-cta-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .demo-cta h2 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: var(--primary-dark);
    }

    .demo-cta p {
      margin-bottom: 2rem;
      font-size: 1.1rem;
    }

    /* Footer */
    .demo-footer {
      background: #222;
      color: #aaa;
      padding: 3rem 2rem 1.5rem;
      text-align: center;
    }

    .demo-footer-links {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }

    .demo-footer-links a {
      color: #ddd;
      text-decoration: none;
      transition: var(--transition);
    }

    .demo-footer-links a:hover {
      color: var(--text-white);
    }

    .demo-footer-copyright {
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #444;
      font-size: 0.9rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .demo-hero h1 {
        font-size: 2rem;
      }

      .demo-navbar {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
      }

      .demo-navbar-actions {
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .demo-hero {
        padding: 3rem 1rem;
      }

      .demo-hero h1 {
        font-size: 1.8rem;
      }

      .demo-video-controls {
        flex-direction: column;
        align-items: center;
      }

      .demo-video-control-btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="demo-navbar">
    <a href="/" class="demo-navbar-logo">
      <i class="fas fa-clinic-medical"></i>
      <span>AK-Pharma</span>
    </a>
    <div class="demo-navbar-actions">
      <a href="/contact" class="demo-btn demo-btn-outline">
        <i class="fas fa-envelope"></i> Contact
      </a>
      <a href="/essai-gratuit" class="demo-btn demo-btn-primary">
        <i class="fas fa-rocket"></i> Essai gratuit
      </a>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="demo-hero">
    <div class="demo-hero-content">
