      <div class="demo-video-controls">
        <button class="demo-video-control-btn" onclick="scrollToVideo()">
          <i class="fas fa-play"></i> Voir la démo
        </button>
        <a href="#features" class="demo-video-control-btn">
          <i class="fas fa-star"></i> Fonctionnalités
        </a>
      </div>
    </div>
  </section>

  <!-- Video Demo Section -->
  <section class="demo-video-section" id="videoDemo">
