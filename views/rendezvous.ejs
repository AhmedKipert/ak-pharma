  background-color: #4285f4;
  color: #fff;
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

header h1 {
  margin: 0;
  font-size: 2rem;
}

.actions {
  margin-top: 1rem;
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

#searchRdv {
  padding: 0.6rem;
  border: none;
  border-radius: 8px;
  width: 250px;
}

#newRdvBtn {
  background-color: #34a853;
  border: none;
  color: white;
  padding: 0.6rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  font-weight: bold;
}

main {
  padding: 2rem;
}

.rdv-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
