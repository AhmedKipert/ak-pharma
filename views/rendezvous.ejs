<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Rendez-vous | Gestion des Patients</title>
  <link rel="stylesheet" href="/css/rendezvous.css">
</head>
<body>
<%- include('./composants/navbar.ejs') %>

  <header>
    <h1>ðŸ“… Gestion des Rendez-vous</h1>
    <div class="actions">
      <input type="text" id="searchRdv" placeholder="ðŸ” Rechercher par nom ou date">
      <button id="newRdvBtn">+ Nouveau rendez-vous</button>
    </div>
  </header>

  <main>
    <table class="rdv-table">
      <thead>
        <tr>
          <th>Nom du Patient</th>
          <th>Date</th>
          <th>Heure</th>
          <th>Motif</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="rdvList">
         rendezvous.forEach(rdv => { %>
          <tr>
            <td>= rdv.patient.nom %></td>
            <td>= rdv.date %></td>
            <td>= rdv.heure %></td>
            <td>= rdv.motif %></td>
            <td>
              <a href="/rendezvous/= rdv._id %>/edit" class="btn-edit">Modifier</a>
              <form action="/rendezvous/= rdv._id %>?_method=DELETE" method="POST" class="inline-form">
                <button type="submit" class="btn-delete">Supprimer</button>
              </form>
            </td>
          </tr>
         }) %>
      </tbody>
    </table>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
  const search = document.getElementById("searchRdv");
  const rows = document.querySelectorAll("#rdvList tr");

  search.addEventListener("input", () => {
    const val = search.value.toLowerCase();

    rows.forEach((row) => {
      const patient = row.children[0].textContent.toLowerCase();
      const date = row.children[1].textContent.toLowerCase();
      row.style.display = patient.includes(val) || date.includes(val) ? "" : "none";
    });
  });

  const newBtn = document.getElementById("newRdvBtn");
  newBtn.addEventListener("click", () => {
    window.location.href = "/rendezvous/nouveau";
  });
});

  </script>

</body>
</html>
<style>
    body {
  font-family: 'Segoe UI', sans-serif;
